{
    "compilerOptions": {
      "target": "ES2020",  // Ensure ECMAScript 2020 or higher is used
      "module": "CommonJS",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./out",
      "sourceMap": true
    },
    "include": [
      "electron/**/*.ts",
      "client/src/main/**/*.ts",
      "client/src/preload/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  