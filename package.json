{
    "name": "squidcoin-desktop",
    "version": "1.0.0",
    "description": "A decentralized file-sharing application using IPFS and Bitcoin",
    "main": "./main.js",
    "author": "Squid Team",
    "scripts": {
        "start": "cd client && react-scripts start",
        "build": "cd client && npm run build",
        "electron-dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
        "electron-build": "npm run build && electron .",
        "electron": "electron ./main.js"
    },
    "dependencies": {
        "18": "^0.0.0",
        "@electron-toolkit/preload": "^3.0.0",
        "@emotion/react": "^11.13.3",
        "@emotion/styled": "^11.13.0",
        "@mui/material": "^6.1.3",
        "@types/chart.js": "^2.9.41",
        "@types/glob": "^7.2.0",
        "chart": "^0.1.2",
        "chart.js": "^4.4.5",
        "minimatch": "^3.0.4",
        "mongodb": "^6.9.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/mongoose": "^5.11.96",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^9.0.1",
        "electron": "^32.2.0",
        "electron-builder": "^25.1.7",
        "electron-vite": "^2.3.0",
        "mongoose": "^8.8.0",
        "nodemon": "^3.1.7",
        "react-scripts": "^5.0.1",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^4.9.5",
        "vite": "^5.0.12",
        "wait-on": "^8.0.1"
    },
    "build": {
        "appId": "com.squidcoin.desktop",
        "productName": "SquidCoin",
        "files": [
            "build/**/*",
            "electron/**/*"
        ],
        "mac": {
            "category": "public.app-category.utilities"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "category": "Utility"
        },
        "extraResources": [
            {
                "from": "client/pblic/",
                "to": "public/",
                "filter": [
                    "**/*"
                ]
            }
        ]
    }
}
